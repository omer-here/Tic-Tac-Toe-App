<!--                android:textSize="18sp"-->
<!--                android:layout_marginTop="30dp"-->
<!--                android:backgroundTint="@color/purple"-->
<!--                app:cornerRadius = "20dp"/>-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>
